   "source": [
    "#main\n",
    "from glob import glob\n",
    "\n",
    "folders = [p for p in glob(\"./*\", recursive=True) if not os.path.isfile(p)]\n",
    "for folder in folders:\n",
    "    files = glob(folder + \"/*.tif\")\n",
    "    for file in files:\n",
    "        tif_to_png(file)\n"
   ]
